<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:mc="sap.suite.ui.microchart">
	<ResponsivePopover id="laborChart" title="{i18n>titleLaborChartPopup}" class="sapUiPopupWithPadding" placement="Top">
		<content>
			<HBox>
				<VBox>
					<Title text="{i18n>titleTotalLaborHrsChart}"/>
					<mc:ColumnMicroChart id="totalHrs" size="M" class="sapUiSmallMargin">
						<mc:leftTopLabel>
							<mc:ColumnMicroChartLabel label=""/>
						</mc:leftTopLabel>
						<mc:rightTopLabel>
							<mc:ColumnMicroChartLabel label=""/>
						</mc:rightTopLabel>
						<mc:leftBottomLabel>
							<mc:ColumnMicroChartLabel label="{i18n>chartPlanned}"/>
						</mc:leftBottomLabel>
						<mc:rightBottomLabel>
							<mc:ColumnMicroChartLabel label="{i18n>chartActual}"/>
						</mc:rightBottomLabel>
						<mc:columns>
							<mc:ColumnMicroChartData value="" color="Neutral"/>
							<mc:ColumnMicroChartData value="" color=""/>
						</mc:columns>
					</mc:ColumnMicroChart>
				</VBox>
				<VBox>
					<Title text="{i18n>titleLaborHrsPerUoM} {taskView>/UoM}"/>
					<mc:ColumnMicroChart id="totalHrsPerUoM" size="M" class="sapUiSmallMargin">
						<mc:leftTopLabel>
							<mc:ColumnMicroChartLabel label=""/>
						</mc:leftTopLabel>
						<mc:rightTopLabel>
							<mc:ColumnMicroChartLabel label=""/>
						</mc:rightTopLabel>
						<mc:leftBottomLabel>
							<mc:ColumnMicroChartLabel label="{i18n>chartPlanned}"/>
						</mc:leftBottomLabel>
						<mc:rightBottomLabel>
							<mc:ColumnMicroChartLabel label="{i18n>chartActual}"/>
						</mc:rightBottomLabel>
						<mc:columns>
							<mc:ColumnMicroChartData value="" color="Neutral"/>
							<mc:ColumnMicroChartData value="" color=""/>
						</mc:columns>
					</mc:ColumnMicroChart>
				</VBox>
			</HBox>
			<HBox>
				<VBox>
					<Title text="{i18n>titleTotalLaborCostChart} [{taskView>/currency}]"/>
					<mc:ColumnMicroChart id="totalCost" size="M" class="sapUiSmallMargin">
						<mc:leftTopLabel>
							<mc:ColumnMicroChartLabel label=""/>
						</mc:leftTopLabel>
						<mc:rightTopLabel>
							<mc:ColumnMicroChartLabel label=""/>
						</mc:rightTopLabel>
						<mc:leftBottomLabel>
							<mc:ColumnMicroChartLabel label="{i18n>chartPlanned}"/>
						</mc:leftBottomLabel>
						<mc:rightBottomLabel>
							<mc:ColumnMicroChartLabel label="{i18n>chartActual}"/>
						</mc:rightBottomLabel>
						<mc:columns>
							<mc:ColumnMicroChartData value="" color="Neutral"/>
							<mc:ColumnMicroChartData value="" color=""/>
						</mc:columns>
					</mc:ColumnMicroChart>
				</VBox>
				<VBox>
					<Title text="{i18n>titleLaborCostPerUoM} {taskView>/UoM} [{taskView>/currency}]"/>
					<mc:ColumnMicroChart id="totalCostPerUoM" size="M" class="sapUiSmallMargin">
						<mc:leftTopLabel>
							<mc:ColumnMicroChartLabel label=""/>
						</mc:leftTopLabel>
						<mc:rightTopLabel>
							<mc:ColumnMicroChartLabel label=""/>
						</mc:rightTopLabel>
						<mc:leftBottomLabel>
							<mc:ColumnMicroChartLabel label="{i18n>chartPlanned}"/>
						</mc:leftBottomLabel>
						<mc:rightBottomLabel>
							<mc:ColumnMicroChartLabel label="{i18n>chartActual}"/>
						</mc:rightBottomLabel>
						<mc:columns>
							<mc:ColumnMicroChartData value="" color="Neutral"/>
							<mc:ColumnMicroChartData value="" color=""/>
						</mc:columns>
					</mc:ColumnMicroChart>
				</VBox>
			</HBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>